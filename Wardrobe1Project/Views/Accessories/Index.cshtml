@model IEnumerable<Wardrobe1Project.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>ACCESSORIES</h2>

<p>
    @Html.ActionLink("Add Accessories", "Create")
</p>
<div class="container">
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesPhoto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesSeason)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessoriesOccasion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessoriesName)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.AccessoriesPhoto)" style="width:150px; height:150px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessoriesType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessoriesColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessoriesSeason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessoriesOccasion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccessoriesID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AccessoriesID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccessoriesID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
